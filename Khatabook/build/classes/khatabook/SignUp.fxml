            <Font size="14.0" />
         </font>
      </PasswordField>
      <FontAwesomeIcon iconName="KEY" layoutX="30.0" layoutY="286.0" size="20" styleClass="parentcolor" />
      <PasswordField fx:id="conPwd" layoutX="60.0" layoutY="309.0" prefHeight="32.0" prefWidth="240.0" promptText="Confirm Password" styleClass="logincontrol">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <FontAwesomeIcon iconName="KEY" layoutX="29.0" layoutY="336.0" size="20" styleClass="parentcolor" />
      <Button layoutX="59.0" layoutY="378.0" mnemonicParsing="false" onAction="#register" prefHeight="34.0" prefWidth="240.0" text="Register" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <styleClass>
            <String fx:value="parentcolor" />
            <String fx:value="buttonstyle" />
         </styleClass>
      </Button>
      <Label fx:id="errorMsg" alignment="CENTER" contentDisplay="CENTER" layoutX="2.0" layoutY="98.0" prefHeight="58.0" prefWidth="350.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
